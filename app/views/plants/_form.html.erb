      <%= simple_form_for @plant do |f| %>
        <%= f.input :name, placeholder: 'Dahlia' %>
        <%= f.input :description, placeholder: 'My plant will make your home green again' %>
        <%= f.input :availability, as: :select, include_blank: false, collection: ['yes','no'] %>
        <%# <%= f.input :price, placeholder: 'price per day' %>
        <%# <%= f.input :availability, input_html: { class: "daterange" }, as: :string %>

        <%# <%= f.input :photo, as: :file, label: "Picture:" %>
        <% button_text = @plant.new_record? ? "Add my plant" : "Edit my plant" %>
        <%= f.submit button_text, class: "btn btn-success border mt-3" %>
      <% end%>
