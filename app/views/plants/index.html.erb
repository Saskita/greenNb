<h2 class="titre-section text-center">My Plants ðŸŒ¿</h2>
<ul>
  <% @plants.each do |plant| %>
    <li>
    <%= link_to plant.name.capitalize, plant_path(plant) %>
    </li>
  <% end %>
</ul>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="container display-plants">
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= plant.photos[0] %>');">
          <div class="card-description">
            <p><%= plant.name.capitalize %></p>
          </div>
          <%= link_to "+", plant_path(plant), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

