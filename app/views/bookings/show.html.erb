<h2 class="titre-section text-center">Pending booking...</h2>
<p>You have just booked the <strong><%= @plant.name %></strong> plant, from <strong><%= @booking.start_date.strftime('%d-%m-%Y') %></strong> to <strong><%= @booking.end_date.strftime('%d-%m-%Y') %></strong>.</p>
<% @plant.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
<% end %>
<p>Please wait for the owner's confirmation.</p>
<p><U>Booking details</U>:</p>
<p>Total price: <%= @booking.set_total_price %>€</p>
<p>Plant location: <%= @plant.address %> </p>

<% if @booking.plant.user == current_user %>
  <%= simple_form_for @booking do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: 'Accepted' } %>
    <%= f.submit "Accept" %>
  <% end %>
    <%= simple_form_for @booking do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: 'Declined' } %>
    <%= f.submit "Decline" %>
  <% end %>
<% else %>
<% end %>

