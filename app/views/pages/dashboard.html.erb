
<div class="form-container">
  <h2 class="titre-section text-center mb-4 pt-4">Dashboard</h2>
  <div class="dashboard-boxes">

    <div class="dash-profil-plant-box" style="width: 100%">
      <div class="dash-box profil">
        <h3 class="titre-section small-title mt-2 mb-4">Manage my bookings</h3>
        <h4>
          <i class="fas fa-seedling mr-2"></i>My booked plants
          (<span class="<%= 'red' if @my_plant_bookings.length > 0 %>"><%= @my_plant_bookings.length%></span>)
        </h4>
        <ul>
        <% @my_plant_bookings.each do |booking| %>
          <li>
            <%= link_to booking.plant.name, booking_path(booking) %>
          </li>
        <% end %>
        </ul>
        <h4>
          <i class="fas fa-seedling mr-2"></i> My bookings
            (<span class="<%= 'red' if @user.bookings.length > 0 %>"><%= @user.bookings.length %></span>)
        </h4>
        <ul>
          <% @my_bookings.each do |booking| %>
          <li>
            <%= link_to booking.plant.name, booking_path(booking) %>
          </li>
        <% end %>
        </ul>
      </div>


      <div class="dash-box plants">
        <h3 class="titre-section small-title mt-2 mb-4">My Plants</h3>
        <ul>
        <% @plants.each do |plant| %>
        <li class="mb-3">
          <%= cl_image_tag plant.photos.first.key, height: 40, width: 40, crop: :fill, class: "avatar mr-2" %>
          <%= link_to "#{plant.name.split.map(&:capitalize).join(' ')}", plant_path(plant) %>
          â€¢ <%= link_to edit_plant_path(plant) do %>
            <i class="fas fa-pen ml-2 mr-2"></i>
          <% end  %>
          <%= link_to plant_path(plant), method: :delete, data: { confirm: "Are you sure ?"} do %>
          <i class="far fa-trash-alt"></i>
          <% end  %>
          <%# <i class="fas fa-seedling"></i> %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>


    <div class="dash-box manage">
      <div class="photo-profil">
        <h3 class="titre-section small-title mt-2 mb-4">My Profile</h3>
        <%= cl_image_tag current_user.avatar.key, class:"avatar mt-2 mb-4" %>
      </div>
      <a class="btn btn-success mb-2" href="">Edit profile <i class="fas fa-pen ml-2"></i></a>
    </div>
  </div>
</div>



